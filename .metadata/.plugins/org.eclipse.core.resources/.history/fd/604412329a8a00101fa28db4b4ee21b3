# data source
spring.datasource.driverClassName=org.postgresql.Driver
spring.datasource.url=jdbc:postgresql://localhost:5432/alura_forum
spring.datasource.username=postgres
spring.datasource.password=postgre1234

# jpa
spring.jpa.properties.hibernate.dialect=org.hibernate.dialect.PostgreSQLDialect
spring.jpa.hibernate.ddl-auto=update
spring.jpa.show-sql=true

# faça o Spring rodar o data.sql mesmo em banco externo (Postgres)
spring.sql.init.mode=always

# garanta que o Hibernate crie as tabelas antes de rodar o data.sql
spring.jpa.defer-datasource-initialization=true
